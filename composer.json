{
  "name": "dbogdanoff/ai-adapter",
  "description": "Provider-agnostic AI client for PHP with pluggable adapters and routing.",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "guzzlehttp/guzzle": "^7.9",
    "nyholm/psr7": "^1.8",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.1 || ^2.0",
    "psr/log": "^1.1 || ^2.0 || ^3.0",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "AiAdapter\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AiAdapter\\Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5"
  },
  "scripts": {
    "test": "phpunit --colors=always"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
